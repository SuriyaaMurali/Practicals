<Widget>:
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1

<Button>
    color: 1, 1, 1, 1
    background_color: 1, 0, 0, 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.change_value(1)
            Button:
                text: 'Down'
                on_press: app.change_value(-1)
